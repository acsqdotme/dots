" TODO figure out 80 char auto return
" utf8 so epic
set encoding=utf-8

" Show line numbers
set number
set relativenumber

" Status bar
set laststatus=2

" Highlight
syntax on

" 2 space tab
set shiftwidth=2
set tabstop=2

" spaces instead of tabs
set expandtab

" Don't make lame backup files
set nobackup

" scroll buffer distance
set scrolloff=8

" highlight while writing
set incsearch
set hlsearch

" no linewrap 
set nowrap

" ignore case during search
set ignorecase
set smartcase

" show last cmd typed on bottom
set showcmd

" show mode always
set showmode

" show vim command history
set history=1000
